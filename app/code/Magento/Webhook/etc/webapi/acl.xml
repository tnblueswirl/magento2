<config>
    <acl>
        <resources>
            <resource id="Magento_Webapi">
                <resource id="webhook" title="Manage WebHooks">
                    <resource id="webhook/create" title="Create" sortOrder="10" />
                    <resource id="webhook/get" title="Retrieve" sortOrder="20" />
                    <resource id="webhook/update" title="Update" sortOrder="30" />
                    <resource id="webhook/delete" title="Delete" sortOrder="40" />
                </resource>
            </resource>
        </resources>
    </acl>
    <mapping>
        <resource id="webhook/list" parent="webhook/get" />
    </mapping>
</config>
