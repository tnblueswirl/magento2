        <param name="aclCache">
            <instance type="Magento\Core\Model\Acl\Cache\Proxy" />
        </param>
    </type>
    <type name="Magento\App\Updater\SetupFactory">
        <param name="resourceTypes">
            <value>
                <user_setup>Magento\User\Model\Resource\Setup</user_setup>
            </value>
        </param>
    </type>
